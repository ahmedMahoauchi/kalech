{% extends 'admin-base.html.twig' %}

{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <a href="{{ path('display_Employe') }}"><i class="btn btn-success" style="font-size: 500px;"></i></a>
                    <h5 class="card-title">Add Employe </h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}





                    <label for="inputText" class="col-sm-10 col-form-label">nom employe </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.nomemploye,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.nomemploye,{'attr':{'class':'text-danger'}}) }}



                    <label for="inputText" class="col-sm-10 col-form-label">date employe </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.dateemploye,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.dateemploye,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-10 col-form-label">numero tel  </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.numemploye,{'attr':{'class':'form-control'}}) }}
                    </div>
                    {{ form_errors(f.numemploye,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-10 col-form-label">salaire </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.salaireemploye,{'attr':{'class':'form-control'}}) }}
                    </div>
                    {{ form_errors(f.salaireemploye,{'attr':{'class':'text-danger'}}) }}

                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}