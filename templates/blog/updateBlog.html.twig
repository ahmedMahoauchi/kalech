{% extends 'admin-base.html.twig' %}
{% block title %}Hello AdminDashboardController!{% endblock %}

{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Update Blog Backend ADMIN</h5>

                    <!-- General Form Elements -->
                    {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                        <label for="inputText" class="col-sm-4 col-form-label">Titre</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.titre,{'attr':{'class':'form-control'}}) }}

                        </div>
                    {{ form_errors(form.titre,{'attr':{'class':'text-danger'}}) }}



                    <label for="inputText" class="col-sm-4 col-form-label">Description</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(form.description,{'attr':{'class':'text-danger'}}) }}
                    
                    <label for="inputText" class="col-sm-4 col-form-label">Photo</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.photo,{'attr':{'class':'form-control'}}) }}

                        </div>
                    {{ form_errors(form.photo,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-4 col-form-label">Rubrique</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.rubrique,{'attr':{'class':'form-control'}}) }}

                        </div>
                    {{ form_errors(form.rubrique,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-4 col-form-label">idUser</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.idUser,{'attr':{'class':'form-control'}}) }}

                        </div>
                    {{ form_errors(form.idUser,{'attr':{'class':'text-danger'}}) }}
                   
                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(form.modifier,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(form) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}