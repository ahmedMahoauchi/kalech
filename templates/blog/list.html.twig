{% extends 'admin-base.html.twig' %}
{% block title %}Hello AdminDashboardController!{% endblock %}

{% block body %}
<div class="example-wrapper">
<div style="display: flex;align-itens: center; justify-content: center">

<div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Gestion Blogs
            </div>
            <div class="card-body">
            <a class="btn btn-primary"  href="{{ path('addBlog') }}" >Add Blog</a>
                <table id="example" class="table table-striped table-bordered">
                    <thead>


    <tr>
        <td>ID</td>
        <td>Rubrique ID</td>
        <td>User ID</td>
        <td>Title</td>
        <td>Description</td>
        <td>preview</td>
        <td>Photo</td>
        <td>Votes</td>
        <td>Date</td>
        <td>Modification</td>
        <td>Suppression</td>
    </tr>
    </thead>
      <tbody>
    {% for blog in blogs %}
  
        <tr>
            <td>{{ blog.id }}</td>
            <td>{{ blog.rubrique.id}}</td>
             <td>{{ blog.idUser.id }}</td>
            <td>{{ blog.titre }}</td>
            <td>{{ blog.description }}</td>
            <td><img src="{{ asset('Uploads/image/' ~blog.photo) }}"  height="52" width="52"></td>
            <td>{{ blog.photo }}></td>
             <td>{{ blog.votes }}</td>
            <td>{{ blog.date|date('d-m-Y H:i:s') }}</td>
            
<td> 
<a class="btn btn-success" href="{{ path('updateBlog',{'id':blog.id}) }}">Update</a>
</td> 
<td>
<a class="btn btn-danger" href="{{ path('deleteBlog',{'id':blog.id}) }}">Delete</a>
</td>
     

        </tr>
    {% endfor %}
</tbody>
                </table>
            </div>
</div>
  </div>
</div>

{% endblock %}
