{% extends 'admin-base.html.twig' %}

{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <a href="{{ path('display_Conge') }}"><i class="btn btn-success" style="font-size: 500px;"></i></a>
                    <h5 class="card-title">Add Conge </h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}

                    <label>employe </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.idemploye,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.idemploye,{'attr':{'class':'text-danger'}}) }}



                    <label>debut fin </label>
                    <div class="col-sm-30">
                        {{ form_widget(f.debutconge,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.debutconge,{'attr':{'class':'text-danger'}}) }}


                    <label >date fin </label>
                    <div class="col-sm-30">
                        {{ form_widget(f.finconge,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.finconge,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-10 col-form-label">type conge </label>
                    <div class="col-sm-10">
                        {{ form_widget(f.typeconge,{'attr':{'class':'form-control'}}) }}
                    </div>
                    {{ form_errors(f.typeconge,{'attr':{'class':'text-danger'}}) }}

                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}