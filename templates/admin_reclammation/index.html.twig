        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                DataTable Example
            </div>
            <div class="card-body">
                <table id="example" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Theme</th>
                            <th>Description</th>
                            <th>Date</th>
                            <th>Supprimer</th>
                            <th>Modifier</th>
                        </tr>
                    </thead>
                    <tbody>
    
                    {% for reclas in reclas %}
                        <tr>
                            <td>{{reclas.nom}}</td>
                            <td>{{reclas.theme}}</td>
                            <td>{{reclas.description}}</td>
                            <td>{{ reclas.date }}</td>
                            <td><a  href="{{ path('dd',{'id': reclas.id})}}"><button type="button" class="btn btn-danger"><i class="fa-solid fa-trash"></i></button></a></td>
                            <td><a href="{{ path('uu',{'id': reclas.id})}}"><button type="button" class="btn btn-warning"><i class="fa-solid fa-pen"></i></button></a></td>
                        </tr>
                    {% endfor %}
                    <div class="card-body">
                      <a  href="{{ path('statrecla')}}"><button type="button" class="btn btn-danger"><i class="fa-solid fa-chart-area"></i></button></a>
                      <a  href="{{ path('pdfrecla')}}"><button type="button" class="btn btn-danger"><i class="fa-solid fa-file-pdf"></i></button></a>
                      </div>
                   
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
<button class="rounded-circle" style=" border:none; position: fixed;right:    50;width: 100px;height: 100px;bottom:   50; background: green;" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="fas fa-plus " style="color: aliceblue;"></i></button>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">


        <form class="row g-3">
          <div class="col-md-6">
            <label for="inputEmail4" class="form-label">Email</label>
            <input type="email" class="form-control" id="inputEmail4">
          </div>
          <div class="col-md-6">
            <label for="inputPassword4" class="form-label">Password</label>
            <input type="password" class="form-control" id="inputPassword4">
          </div>
          <div class="col-12">
            <label for="inputAddress" class="form-label">Address</label>
            <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
          </div>
          <div class="col-12">
            <label for="inputAddress2" class="form-label">Address 2</label>
            <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
          </div>
          <div class="col-md-6">
            <label for="inputCity" class="form-label">City</label>
            <input type="text" class="form-control" id="inputCity">
          </div>
          <div class="col-md-6">
            <label for="inputState" class="form-label">State</label>
            <select id="inputState" class="form-select">
              <option selected>Choose...</option>
              <option>...</option>
            </select>
          </div>
          <div class="col-12">
            <input type="file" class="dropify" data-default-file="url_of_your_file" />
          </div>
          
         
          
        </form>
      </div>
      <div class="modal-footer justify-content-center">        
        <button type="button" class="btn btn-success ">Save changes</button>
      </div>
    </div>
  </div>
</div>
<script src="{{asset('js/dropify.js')}}"></script>
